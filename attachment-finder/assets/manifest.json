{
  "manifest_version": 2,
  "name": "Attachment Finder",
  "description": "Search attachments with a natural language",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Attachment Finder",
    "default_popup": "index.html"
  },
  "permissions": [
    "background",
    "identity",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "scripts": ["bundle.js"],
    "persistent": false
  },
  "oauth2": {
    "client_id": "337045226723-fcvn6sudt887m0m3g6aab02hat1jc3tm.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  }
}
